 <section id="contact3" class="container content-section text-center">
 <div class="row">
 <div class="col-lg-8 col-lg-offset-2">
 <h2>Contact Form</h2>
 <%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group row">
    <label for="nameField" class="col-sm-2 form-control-label"><%= f.label :name,:for=>"nameField" %></label>
    <div class="col-sm-10">
    <%= f.text_field :name, class: 'form-control', placeholder:'Enter name',:id=>"nameField"  %>
    </div>
  </div>
   <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 form-control-label"><%= f.label :address %></label>
    <div class="col-sm-10">
       <%= f.text_field :address, class: 'form-control' %>    
    </div>
  </div>
   <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 form-control-label"><%= f.label :email %></label>   
    <div class="col-sm-10">
        <%= f.text_field :email, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <label for="inputPassword" class="col-sm-2 form-control-label"><%= f.label :phone %></label>  
    <div class="col-sm-10">
    <%= f.text_field :phone, class: 'form-control' %>
    </div>
  </div>
  <div >
    <label for="inputPassword" class="col-sm-2 form-control-label"><%= f.label :comments %></label>  
    <div class="col-sm-10">
    <%= f.text_area :comments, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group row">
    <div class="col-sm-10">  
    <%= f.submit 'Send meessage',class: 'btn btn-default btn-lg' %>
    </div>
  </div>
<% end %>
 </div>
 </div>
 </section>
